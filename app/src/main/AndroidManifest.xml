<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network access for Firebase (Auth, Firestore, Storage, FCM) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Vibration for SignalManager.vibrate() -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- FCM: POST_NOTIFICATIONS required on Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Photo proof: read from gallery -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Android 9–12: legacy storage access for image picker -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeQuest">

        <!-- ── Entry point ───────────────────────────────────────────── -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.HomeQuest.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ── Auth screens ──────────────────────────────────────────── -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- ── Core screens ──────────────────────────────────────────── -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".QuestListActivity"
            android:exported="false" />

        <activity
            android:name=".QuestDetailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".CreateQuestActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".RewardsActivity"
            android:exported="false" />

        <activity
            android:name=".CreateCouponActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- ── FCM: receives push notifications ──────────────────────── -->
        <service
            android:name=".utilities.HomeQuestMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>
</manifest>
