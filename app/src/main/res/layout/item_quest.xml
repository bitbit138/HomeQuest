<?xml version="1.0" encoding="utf-8"?>
<!--
    Quest list item layout.
    ID convention (Section 3.1): {screen}_{WIDGET}_{descriptor}
    Screen prefix = "quest" â€” matches QuestAdapter binding references.
    Container: MaterialCardView for consistent elevation and ripple.
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/screen_padding"
    android:layout_marginTop="@dimen/spacing_xs"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/hq_cream"
    app:strokeColor="@color/hq_herb"
    app:strokeWidth="2dp"
    style="@style/HomeQuest.Card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_min_height"
        android:padding="@dimen/spacing_md">

        <!-- Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quest_LBL_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="@color/hq_on_surface"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/quest_BTN_claim" />

        <!-- Description -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quest_LBL_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/hq_on_surface_variant"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/quest_LBL_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/quest_BTN_claim" />

        <!-- XP reward chip -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quest_LBL_xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="@color/hq_herb"
            android:textStyle="bold"
            android:background="@color/hq_teal_container"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/quest_LBL_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Coin reward -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quest_LBL_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="@color/hq_copper"
            android:textStyle="bold"
            android:background="@color/hq_gold_light"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toTopOf="@id/quest_LBL_xp"
            app:layout_constraintStart_toEndOf="@id/quest_LBL_xp"
            app:layout_constraintBottom_toBottomOf="@id/quest_LBL_xp" />

        <!-- Deadline label -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quest_LBL_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:textAppearance="?attr/textAppearanceLabelSmall"
            android:textColor="@color/hq_on_surface_variant"
            app:layout_constraintTop_toTopOf="@id/quest_LBL_xp"
            app:layout_constraintStart_toEndOf="@id/quest_LBL_coins"
            app:layout_constraintBottom_toBottomOf="@id/quest_LBL_xp" />

        <!-- Late/Tomorrow Banner -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quest_LBL_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="1dp"
            android:textAppearance="?attr/textAppearanceLabelSmall"
            android:textColor="@color/hq_on_error"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/quest_LBL_xp"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Claim button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/quest_BTN_claim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_claim"
            style="@style/HomeQuest.Button.Primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
