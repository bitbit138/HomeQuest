<?xml version="1.0" encoding="utf-8"?>
<!--
    Leaderboard item layout.
    ID convention: leaderboard_{WIDGET}_{descriptor}
    Rank medal emoji rendered by adapter (ðŸ¥‡ðŸ¥ˆðŸ¥‰#N).
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_xs"
    android:paddingVertical="@dimen/spacing_sm"
    android:minHeight="@dimen/item_min_height">

    <!-- Rank medal / number -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/leaderboard_LBL_rank"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/screen_padding"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="@color/hq_on_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Avatar image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/leaderboard_IMG_avatar"
        android:layout_width="@dimen/avatar_medium"
        android:layout_height="@dimen/avatar_medium"
        android:layout_marginStart="@dimen/spacing_sm"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        android:contentDescription="@string/cd_avatar"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.HomeQuest.Circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/leaderboard_LBL_rank"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Display name -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/leaderboard_LBL_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:textAppearance="?attr/textAppearanceTitleSmall"
        android:textColor="@color/hq_on_surface"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/leaderboard_IMG_avatar"
        app:layout_constraintEnd_toStartOf="@id/leaderboard_LBL_xp"
        app:layout_constraintBottom_toTopOf="@id/leaderboard_LBL_level" />

    <!-- Level label -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/leaderboard_LBL_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:textAppearance="?attr/textAppearanceLabelSmall"
        android:textColor="@color/hq_on_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_LBL_name"
        app:layout_constraintStart_toEndOf="@id/leaderboard_IMG_avatar"
        app:layout_constraintEnd_toStartOf="@id/leaderboard_LBL_xp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- XP total â€” right-aligned -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/leaderboard_LBL_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        android:textColor="@color/hq_purple_primary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
